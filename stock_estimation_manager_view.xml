<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>       

        <record id="view_stock_forecast_tree" model="ir.ui.view">
            <field name="name">report.stock.forecast.tree</field>
            <field name="model">stock.estimation.manager</field>
            <field name="arch" type="xml">
                <tree string="Stock Forecast Analysis">
                    <field name="procurement_need" select="1"/>
                    <field name="product_name" select="1"/>
                    <field name="security_stock" select="1"/>
                    <field name="outgoings_per_day" select="1"/>                              
                    <field name="stock_min" select="1"/>
                    <field name="stock_max" select="1"/>
                    <field name="stock_virtual" select="1"/>
                    <field name="stock_real" select="1"/>
                    <field name="suplier_delay" select="1"/>
               </tree>
            </field>
        </record>

        <record id="view_stock_forecast_graph" model="ir.ui.view">
             <field name="name">report.stock.forecast.graph</field>
             <field name="model">stock.estimation.manager</field>
             <field name="arch" type="xml">
                 <graph string="Stock Forecast Analysis" type="bar">
                     <field name="product_name"/>
                     <field name="outgoings_per_day"/>
                 </graph>
             </field>
        </record>

        <record id="action_stock_forecast_report" model="ir.actions.act_window">
            <field name="name">Stock Forecast Analysis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.estimation.manager</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>            
            <field name="help">Stock Forecast Analysis bla bla bla.</field>
        </record>

        <menuitem name="Stock Control" id="menu_stock_estimation_manager" parent="base.menu_reporting"/>
        <menuitem name="Stock Forecasting" id="menu_action_stock_forecast_report" parent="menu_stock_estimation_manager" action="action_stock_forecast_report" sequence="10"/>
    </data>
</openerp>
